<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/CarSourceDetails_Button_Normal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:contentDescription="@null"
        android:src="#ffcfcfcf" />

    <LinearLayout
        android:id="@+id/GoodsSourceDetails_Option_Layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/GoodsSourceDetails_Complaints_But"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/car_source_details_button_select"
            android:drawableTop="@drawable/place_order"
            android:onClick="onClickListener"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip"
            android:text="下单"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:contentDescription="@null"
            android:src="#ffcfcfcf" />

        <Button
            android:id="@+id/GoodsSourceDetails_Tel_But"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/car_source_details_button_select"
            android:drawableTop="@drawable/cal_high_icon"
            android:gravity="center"
            android:onClick="onClickListener"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip"
            android:text="@string/CallPhone_Title"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:contentDescription="@null"
            android:src="#ffcfcfcf" />

        <Button
            android:id="@+id/GoodsSourceDetails_Chat_But"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/car_source_details_button_select"
            android:drawableTop="@drawable/chat_icon"
            android:gravity="center"
            android:onClick="onClickListener"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip"
            android:text="@string/Chat_Title"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>