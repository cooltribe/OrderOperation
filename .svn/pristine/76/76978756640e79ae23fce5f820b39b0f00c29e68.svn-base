<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_around_target"
            style="@style/Item_Around_Car_Text_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期望流向:" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_car_user"
                style="@style/Item_Around_Car_Text_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="张先生:123456789" />

            <TextView
                android:id="@+id/item_around_car_authentication"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="#009900"
                android:gravity="center"
                android:text="认"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <RatingBar
                android:id="@+id/item_car_ratingbar"
                style="@style/default_ratingbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_around_carID"
            style="@style/Item_Around_Car_Text_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="车牌:苏A123456           车型:集装车" />

        <TextView
            android:id="@+id/item_around_carLength"
            style="@style/Item_Around_Car_Text_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="车长:18米           载重:14吨" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/item_around_car_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/around_location_icon" />

        <ImageView
            android:id="@+id/item_around_car_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/around_call_icon" />

        <TextView
            android:id="@+id/item_around_distance"
            style="@style/Item_Around_Car_Text_Style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离0.8km" />

        <TextView
            android:id="@+id/item_around_time"
            style="@style/Item_Around_Car_Text_Style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014.7.9" />
    </LinearLayout>

</LinearLayout>