<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip" >

        <RatingBar
            android:id="@id/CarSourceItem_Level"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:numStars="5" />

        <ImageView
            android:id="@id/CarSourceItem_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:layout_toLeftOf="@id/CarSourceItem_Level"
            android:contentDescription="@null"
            android:src="@drawable/insurance_little" />

        <ImageView
            android:id="@id/CarSourceItem_Notar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:layout_toLeftOf="@id/CarSourceItem_insurance"
            android:contentDescription="@null"
            android:src="@drawable/notar_icon" />

        <ImageView
            android:id="@id/CarSourceItem_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:layout_toLeftOf="@id/CarSourceItem_Notar"
            android:contentDescription="@null"
            android:src="@drawable/save_icon" />

        <TextView
            android:id="@id/CarSourceItem_Destination_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CarSourceList_Destination_Tile"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:layout_toLeftOf="@id/CarSourceItem_Save"
            android:layout_toRightOf="@id/CarSourceItem_Destination_Title"
            android:singleLine="true"
            android:textColor="#ff8c8c8c"
            android:textSize="16.0sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/CarSourceItem_CarPlate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@id/CarSourceItem_CarLength"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@id/CarSourceItem_CarType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@id/CarSourceItem_CarWeight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="right"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:gravity="center" >

        <TextView
            android:id="@id/CarSourceItem_Name"
            android:layout_width="55.0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@id/CarSourceItem_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:layout_weight="0.4"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@id/CarSourceItem_CarSourceTpye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:layout_weight="0.2"
            android:background="@color/orange"
            android:gravity="center_horizontal"
            android:padding="3.0dip"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="bold" />

        <CheckBox
            android:id="@id/CarSourceItem_Status"
            android:layout_width="75.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:background="@drawable/mycar_state"
            android:button="@null"
            android:focusable="false"
            android:gravity="center"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="10.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/CarSourceItem_Location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/location_icon"
            android:singleLine="true"
            android:textColor="#ff11aa69"
            android:textStyle="bold" />

        <ImageView
            android:id="@id/CarSourceItem_LocationType_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5.0dip"
            android:contentDescription="@null" />

        <TextView
            android:id="@id/CarSourceItem_PublishDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="right|center"
            android:singleLine="true"
            android:textColor="#ffbdbdbd" />
    </LinearLayout>

</LinearLayout>