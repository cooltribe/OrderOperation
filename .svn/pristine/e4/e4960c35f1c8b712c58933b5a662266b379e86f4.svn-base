<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_select"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/CarSourceItem_Destination_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CarSourceList_Destination_Tile"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CarSourceItem_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#ff8c8c8c"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期望流向:"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CarSourceItem_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#ff8c8c8c"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/CarSourceItem_Level"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/CarSourceItem_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:contentDescription="@null"
            android:src="@drawable/insurance_little"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/CarSourceItem_Notar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:contentDescription="@null"
            android:src="@drawable/notar_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/CarSourceItem_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:contentDescription="@null"
            android:src="@drawable/save_icon"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/CarSourceItem_CarPlate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CarSourceItem_CarLength"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CarSourceItem_CarType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CarSourceItem_CarWeight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/CarSourceItem_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CarSourceItem_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CarSourceItem_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <Button
            android:id="@+id/CarSourceItem_CallUp"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:background="@drawable/confirm_back_button_select"
            android:drawableLeft="@drawable/call_icon"
            android:text="@string/Credit_CallPhone_Title"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/CarSourceItem_CarSourceTpye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/CarSourceItem_Status"
            android:background="@color/orange"
            android:padding="5.0dip"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="10.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/CarSourceItem_Location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/location_icon"
            android:singleLine="true"
            android:textColor="#ff11aa69"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/CarSourceItem_LocationType_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5.0dip"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/CarSourceItem_PublishDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="right|center"
            android:singleLine="true"
            android:textColor="@color/CarSourceList_Text_Color" />
    </LinearLayout>

</LinearLayout>