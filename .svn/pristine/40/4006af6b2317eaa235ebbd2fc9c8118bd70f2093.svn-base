<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_select"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip" >

        <TextView
            android:id="@+id/settlement_detail_order_no_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/settlement_detail_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:layout_toRightOf="@+id/settlement_detail_order_no_hint"
            android:singleLine="true"
            android:textColor="#ff8c8c8c"
            android:textSize="16.0sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算金额:"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/settlement_detail_order_money"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:textColor="#ff8c8c8c"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="状态:"
            android:visibility="gone"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/settlement_detail_order_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:textColor="#ff8c8c8c"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单内容:"
            android:textColor="@color/CarSourceList_Text_Color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/settlement_detail_order_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:textColor="#ff8c8c8c"
            android:textStyle="bold" />
    </LinearLayout>

    <include layout="@layout/line" />

</LinearLayout>