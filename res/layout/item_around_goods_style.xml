<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_good_target"
            style="@style/Item_Around_Car_Text_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南京市→宁波市" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_good_user"
                style="@style/Item_Around_Car_Text_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="张先生:123456789" />

            <!-- 认证ICON -->

            <TextView
                android:id="@+id/item_around_goods_authentication"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="#009900"
                android:gravity="center"
                android:text="认"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="invisible" />

            <RatingBar
                android:id="@+id/item_good_ratingbar"
                style="@style/default_ratingbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_good_goodsType"
            style="@style/Item_Around_Car_Text_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="分类:设备  重量:27吨" />

        <TextView
            android:id="@+id/item_good_carType"
            style="@style/Item_Around_Car_Text_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="车型:平板车   车长:14米" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/item_good_car_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/around_location_icon" />

        <ImageView
            android:id="@+id/item_good_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/around_call_icon" />

        <TextView
            android:id="@+id/item_good_distance"
            style="@style/Item_Around_Car_Text_Style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离0.8km" />

        <TextView
            android:id="@+id/item_good_time"
            style="@style/Item_Around_Car_Text_Style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014.7.9" />
    </LinearLayout>

</LinearLayout>