<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_gravity="center" >

        <LinearLayout
            android:id="@+id/car_manager_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/manager_button_selector2"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp" >

                <TextView
                    android:id="@+id/select_goods_type_hint_tv"
                    style="@style/driver_text_style"
                    android:text="货物名:" />

                <TextView
                    android:id="@+id/select_goods_type_tv"
                    style="@style/driver_text_style"
                    android:text="@string/check_pending_hint" />
            </LinearLayout>

            <TextView
                android:id="@+id/select_car_type_tv"
                style="@style/driver_text_style"
                android:text="车辆要求:123" />

            <TextView
                android:id="@+id/select_goods_weight_tv"
                style="@style/driver_text_style"
                android:text="货物重量:123" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>